<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	
	<bean id="ord" class="com.entity.Order">
		<constructor-arg value="100" />
		<constructor-arg value="Laptop" />
		<constructor-arg value="1" />
	</bean>


	<bean id="cust" class="com.entity.Customer">
		<constructor-arg value="abc123" />
		<constructor-arg value="rahul" />
		<constructor-arg value="rahul@gmail.com" />
		<constructor-arg ref="ord" />
	</bean>



</beans>